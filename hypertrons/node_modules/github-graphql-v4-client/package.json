{
  "name": "github-graphql-v4-client",
  "version": "0.1.0",
  "description": "GitHub GraphQL(API v4) client - Multi token, concurrent control, auto retry",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "tslint {src,test}/**/*.ts",
    "test": "jest --coverage --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openx-lab/github-graphql-client.git"
  },
  "keywords": [
    "GitHub",
    "GraphQL",
    "Client"
  ],
  "author": "Frankzhaopku <syzhao1988@126.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/openx-lab/github-graphql-client/issues"
  },
  "homepage": "https://github.com/openx-lab/github-graphql-client#readme",
  "dependencies": {
    "@octokit/graphql": "^4.0.0",
    "bunyan": "^1.8.12",
    "p-wait-for": "^3.1.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/jest": "^24.0.18",
    "@types/nock": "^10.0.3",
    "@types/node": "^12.7.3",
    "jest": "^24.9.0",
    "nock": "^11.3.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      ".*": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 60,
        "branches": 30,
        "functions": 80,
        "lines": 60
      }
    }
  }
}